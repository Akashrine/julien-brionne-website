---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Hero from '../components/Hero.astro';
import Situation from '../components/Situation.astro';
import Services from '../components/Services.astro';
import Approach from '../components/Approach.astro';
import Bio from '../components/Bio.astro';
import CTA from '../components/CTA.astro';
import FAQ from '../components/FAQ.astro';
import Footer from '../components/Footer.astro';

const title = "Product Copilot pour SaaS en croissance | Julien Brionne";
const description = "Quand la vitesse crée du bruit et que le produit perd son sens, je remets l'équipe, la stratégie et le produit dans le même sens. Hands-on Product Leader pour startups SaaS en croissance.";
---

<Layout title={title} description={description}>
	<Navbar />
	<main>
		<Hero />
		<!-- Bandeau signature -->
		<div class="py-8 px-6 md:px-12 bg-ivory dark:bg-graphite">
			<div class="max-w-[1400px] mx-auto text-center">
				<p class="font-sans text-sm md:text-base tracking-[0.25em] uppercase text-sand font-semibold mb-2">
					Piloter. Stabiliser. Résoudre.
				</p>
				<p class="font-sans text-xs md:text-sm text-graphite dark:text-warmgray-400">
					La méthode Product Copilot pour remettre un système dans le bon sens.
				</p>
			</div>
		</div>
		<Situation />
		<Services />
		<!-- Résultats mesurables -->
		<div class="py-12 md:py-16 px-6 md:px-12 bg-ivory dark:bg-graphite">
			<div class="max-w-[1400px] mx-auto">
				<h2 class="font-serif text-3xl md:text-4xl text-graphite dark:text-ivory text-center mb-8 md:mb-12">
					Des résultats mesurables
				</h2>
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
					<div class="bg-white dark:bg-graphite-light border border-sand/20 dark:border-sand/15 rounded-lg p-6 md:p-8 hover:border-sand/40 transition-all duration-300">
						<div class="text-3xl md:text-4xl font-serif text-sand dark:text-sand-light mb-3">+1,5M€</div>
						<p class="text-sm md:text-base font-semibold text-graphite dark:text-ivory mb-2">d'ARR générés</p>
						<p class="text-xs md:text-sm text-softgray dark:text-warmgray-400">Scale-up SaaS B2B — adoption renforcée, time-to-value réduit.</p>
					</div>
					<div class="bg-white dark:bg-graphite-light border border-sand/20 dark:border-sand/15 rounded-lg p-6 md:p-8 hover:border-sand/40 transition-all duration-300">
						<div class="text-3xl md:text-4xl font-serif text-sand dark:text-sand-light mb-3">+0,6</div>
						<p class="text-sm md:text-base font-semibold text-graphite dark:text-ivory mb-2">usage mensuel par utilisateur</p>
						<p class="text-xs md:text-sm text-softgray dark:text-warmgray-400">Scale-up Mobilité — réduction des frictions clés.</p>
					</div>
					<div class="bg-white dark:bg-graphite-light border border-sand/20 dark:border-sand/15 rounded-lg p-6 md:p-8 hover:border-sand/40 transition-all duration-300">
						<div class="text-3xl md:text-4xl font-serif text-sand dark:text-sand-light mb-3">+0,6</div>
						<p class="text-sm md:text-base font-semibold text-graphite dark:text-ivory mb-2">NPS opérationnel</p>
						<p class="text-xs md:text-sm text-softgray dark:text-warmgray-400">Plateforme services — clarification des parcours et décisions.</p>
					</div>
					<div class="bg-white dark:bg-graphite-light border border-sand/20 dark:border-sand/15 rounded-lg p-6 md:p-8 hover:border-sand/40 transition-all duration-300">
						<div class="text-3xl md:text-4xl font-serif text-sand dark:text-sand-light mb-3">+8%</div>
						<p class="text-sm md:text-base font-semibold text-graphite dark:text-ivory mb-2">d'efficacité opérationnelle</p>
						<p class="text-xs md:text-sm text-softgray dark:text-warmgray-400">Organisation support — réduction charge cognitive + redesign flux.</p>
					</div>
					<div class="bg-white dark:bg-graphite-light border border-sand/20 dark:border-sand/15 rounded-lg p-6 md:p-8 hover:border-sand/40 transition-all duration-300">
						<div class="text-3xl md:text-4xl font-serif text-sand dark:text-sand-light mb-3">↗</div>
						<p class="text-sm md:text-base font-semibold text-graphite dark:text-ivory mb-2">Rebond de rétention J30</p>
						<p class="text-xs md:text-sm text-softgray dark:text-warmgray-400">Plateforme sociale grand public (30M users) — recentrage sur comportements clés.</p>
					</div>
					<div class="bg-white dark:bg-graphite-light border border-sand/20 dark:border-sand/15 rounded-lg p-6 md:p-8 hover:border-sand/40 transition-all duration-300">
						<div class="text-3xl md:text-4xl font-serif text-sand dark:text-sand-light mb-3">↗</div>
						<p class="text-sm md:text-base font-semibold text-graphite dark:text-ivory mb-2">Hausse adoption et usage</p>
						<p class="text-xs md:text-sm text-softgray dark:text-warmgray-400">Solution B2B insights — repositionnement + nouveaux parcours + PLG.</p>
					</div>
				</div>
			</div>
		</div>
		<Approach />
		<Bio />
		<CTA />
		<FAQ />
	</main>
	<Footer />
</Layout>

