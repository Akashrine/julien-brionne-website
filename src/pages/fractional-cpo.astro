---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { getFractionalCPOSchema, getPageBreadcrumbSchema } from '../utils/schemas';

const title = "Fractional CPO — Vision, Stratégie et Pilotage Produit pour Startups en Croissance | Julien Brionne";
const description = "La clarté stratégique d'un CPO senior, avec la flexibilité d'un modèle fractional. Vision, stratégie et pilotage produit pour startups en croissance.";

const siteUrl = typeof Astro.site === 'string' ? Astro.site : Astro.site?.href || "https://julien-brionne.fr";
const pageUrl = `${siteUrl}/fractional-cpo`;

const serviceSchema = getFractionalCPOSchema({
	siteUrl,
	pageUrl,
	name: "Fractional CPO — Vision, Stratégie et Pilotage Produit",
	description: "La clarté stratégique d'un CPO senior, avec la flexibilité d'un modèle fractional. Vision, stratégie et pilotage produit pour startups en croissance.",
	serviceType: [
		"Fractional CPO",
		"Chief Product Officer",
		"Vision Stratégique",
		"Stratégie Produit",
		"Pilotage Produit"
	],
	areaServed: {
		"@type": "Country",
		"name": "France"
	}
});

const breadcrumbSchema = getPageBreadcrumbSchema(siteUrl, pageUrl, "Fractional CPO");
---

<Layout title={title} description={description}>
	<Navbar />
	<main>
		
		<!-- SECTION 1 — HERO -->
		<section class="min-h-[90vh] flex items-center pt-32 pb-20 relative bg-ivory dark:bg-graphite overflow-hidden" aria-label="Hero - Fractional CPO">
			<div class="absolute inset-0 bg-split-overlay pointer-events-none"></div>
			
			<!-- SVG d'arrière-plan -->
			<div class="absolute inset-0 z-0 pointer-events-none flex items-center justify-center overflow-hidden">
				<svg width="100%" height="100%" viewBox="0 0 1440 800" preserveAspectRatio="xMidYMid slice" fill="none" xmlns="http://www.w3.org/2000/svg" class="opacity-60 dark:opacity-30">
					<path d="M-100 600 C 200 600, 400 300, 800 400 C 1200 500, 1400 200, 1600 200" stroke="#C6A676" stroke-width="1.5" fill="none" />
					<path d="M-100 620 C 200 620, 400 320, 800 420 C 1200 520, 1400 220, 1600 220" stroke="#C6A676" stroke-width="1" fill="none" opacity="0.7" />
					<circle cx="1100" cy="300" r="15" fill="#C6A676" />
				</svg>
			</div>
			
			<div class="max-w-[1400px] mx-auto px-6 md:px-12 w-full grid grid-cols-1 lg:grid-cols-12 gap-12 items-center h-full relative z-10">
				<div class="lg:col-span-8 space-y-8 fade-in-up text-left" style="transition-delay: 0.1s;">
					<!-- Pill Contextuel -->
					<div class="mb-6 inline-flex items-center gap-3 px-4 py-1.5 border border-sand/30 rounded-full bg-ivory/80 dark:bg-graphite/80 backdrop-blur-sm fade-in-up">
						<span class="flex h-2 w-2 relative">
							<span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-sand opacity-75"></span>
							<span class="relative inline-flex rounded-full h-2 w-2 bg-sand"></span>
						</span>
						<span class="text-xs font-mono uppercase tracking-widest text-sand font-medium">Offre Stratégique • 2-6 Mois</span>
					</div>
					<h1 class="font-serif text-4xl md:text-5xl lg:text-6xl leading-[1.05] text-balance font-medium text-graphite dark:text-ivory">
						Fractional CPO — Vision, Stratégie et Pilotage Produit pour Startups en Croissance
					</h1>
					<p class="font-sans text-lg md:text-xl text-graphite dark:text-warmgray-300 max-w-2xl leading-relaxed pt-2">
						La clarté stratégique d'un CPO senior, avec la flexibilité d'un modèle fractional.
					</p>
					<div class="pt-8 flex flex-wrap gap-4">
						<a href="https://app.lemcal.com/@productcopilot/decouverte" 
						   data-lemcal-popup
						   class="inline-block bg-graphite dark:bg-ivory text-ivory dark:text-graphite font-sans px-9 py-4 text-sm font-medium tracking-wide btn-premium"
						   aria-label="Discuter de votre situation produit">
							Discuter de votre situation
						</a>
					</div>
				</div>
			</div>
		</section>

		<!-- SECTION 2 — Pourquoi un Fractional CPO ? -->
		<section class="py-24 md:py-32 px-6 md:px-12 bg-ivory dark:bg-graphite-light relative z-10" aria-labelledby="pourquoi-heading">
			<div class="absolute inset-0 bg-sand/5 pointer-events-none"></div>
			<div class="max-w-4xl mx-auto relative z-10">
				<h2 id="pourquoi-heading" class="font-serif text-3xl md:text-4xl mb-8 fade-in-up text-graphite dark:text-ivory">
					Pourquoi un Fractional CPO ?
				</h2>
				<div class="space-y-6 text-base md:text-lg leading-relaxed text-graphite dark:text-warmgray-300 fade-in-up" style="transition-delay: 0.1s;">
					<p class="font-medium text-graphite dark:text-ivory">Parce que votre produit arrive à un moment où l'instinct ne suffit plus.</p>
					<p class="pt-2">Les symptômes :</p>
					<ul class="space-y-4 ml-4">
						<li class="flex items-start gap-4">
							<span class="text-sand dark:text-sand-light font-serif text-lg md:text-xl mt-0.5 flex-shrink-0 w-4 text-right font-medium">—</span>
							<span class="flex-1">le marché bouge plus vite que vous</span>
						</li>
						<li class="flex items-start gap-4">
							<span class="text-sand dark:text-sand-light font-serif text-lg md:text-xl mt-0.5 flex-shrink-0 w-4 text-right font-medium">—</span>
							<span class="flex-1">les arbitrages manquent de cohérence</span>
						</li>
						<li class="flex items-start gap-4">
							<span class="text-sand dark:text-sand-light font-serif text-lg md:text-xl mt-0.5 flex-shrink-0 w-4 text-right font-medium">—</span>
							<span class="flex-1">la stratégie produit est en décalage avec la traction réelle</span>
						</li>
						<li class="flex items-start gap-4">
							<span class="text-sand dark:text-sand-light font-serif text-lg md:text-xl mt-0.5 flex-shrink-0 w-4 text-right font-medium">—</span>
							<span class="flex-1">vous sentez que vous perdez l'avantage compétitif</span>
						</li>
						<li class="flex items-start gap-4">
							<span class="text-sand dark:text-sand-light font-serif text-lg md:text-xl mt-0.5 flex-shrink-0 w-4 text-right font-medium">—</span>
							<span class="flex-1">la roadmap est devenue un tableau de bord, pas une direction</span>
						</li>
					</ul>
					<p class="pt-4 italic text-graphite dark:text-warmgray-300">
						Le rôle d'un Fractional CPO : ramener une vision qui guide, qui tranche, qui aligne.
					</p>
				</div>
			</div>
		</section>

		<!-- SECTION 3 — Ce que j'apporte -->
		<section id="apporte" class="py-24 md:py-32 px-6 md:px-12 bg-ivory dark:bg-graphite relative z-10" aria-labelledby="apporte-heading">
			<div class="max-w-7xl mx-auto relative z-10">
				<div class="space-y-16 md:space-y-20 fade-in-up">
					<div class="text-center space-y-6">
						<h2 id="apporte-heading" class="font-serif text-3xl md:text-4xl text-graphite dark:text-ivory">Ce que j'apporte</h2>
					</div>
					
					<div class="relative">
						<div class="hidden md:block absolute left-1/2 top-0 bottom-0 w-px bg-[#E5E0D8] dark:bg-warmgray-400/20 -translate-x-1/2"></div>
						
						<div class="grid grid-cols-1 md:grid-cols-3 gap-12 md:gap-16 relative">
							<div class="space-y-6 group relative">
								<div class="w-16 h-[1px] bg-sand dark:bg-sand-light transition-all duration-500 group-hover:w-24"></div>
								<h3 class="font-serif text-2xl md:text-3xl text-graphite dark:text-ivory font-medium">Vision</h3>
								<p class="leading-relaxed text-base md:text-lg text-graphite dark:text-warmgray-300">Une direction claire, qui fait gagner. Pas de jargon. Pas de PowerPoint. Des arbitrages.</p>
							</div>
							<div class="space-y-6 group relative">
								<div class="w-16 h-[1px] bg-sand dark:bg-sand-light transition-all duration-500 group-hover:w-24"></div>
								<h3 class="font-serif text-2xl md:text-3xl text-graphite dark:text-ivory font-medium">Stratégie</h3>
								<p class="leading-relaxed text-base md:text-lg text-graphite dark:text-warmgray-300">Positionnement, différenciation, priorités. Les décisions qui augmentent l'impact.</p>
							</div>
							<div class="space-y-6 group relative">
								<div class="w-16 h-[1px] bg-sand dark:bg-sand-light transition-all duration-500 group-hover:w-24"></div>
								<h3 class="font-serif text-2xl md:text-3xl text-graphite dark:text-ivory font-medium">Pilotage produit</h3>
								<p class="leading-relaxed text-base md:text-lg text-graphite dark:text-warmgray-300">Rendre l'équipe capable d'exécuter la stratégie. Rituels, rythme, arbitrage, lisibilité.</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- SECTION 4 — Pour qui ? -->
		<section class="py-24 md:py-32 px-6 md:px-12 bg-ivory dark:bg-graphite-light relative z-10" aria-labelledby="pour-qui-heading">
			<div class="absolute inset-0 bg-sand/5 pointer-events-none"></div>
			<div class="max-w-4xl mx-auto relative z-10">
				<h2 id="pour-qui-heading" class="font-serif text-3xl md:text-4xl mb-12 fade-in-up text-graphite dark:text-ivory">
					Pour qui ?
				</h2>
				<div class="space-y-6 text-base md:text-lg leading-relaxed text-graphite dark:text-warmgray-300 fade-in-up" style="transition-delay: 0.1s;">
					<ul class="space-y-4 ml-4">
						<li class="flex items-start gap-4">
							<span class="text-sand dark:text-sand-light font-serif text-lg md:text-xl mt-0.5 flex-shrink-0 w-4 text-right font-medium">—</span>
							<span class="flex-1"><strong class="text-graphite dark:text-ivory font-medium">SaaS B2B en accélération</strong></span>
						</li>
						<li class="flex items-start gap-4">
							<span class="text-sand dark:text-sand-light font-serif text-lg md:text-xl mt-0.5 flex-shrink-0 w-4 text-right font-medium">—</span>
							<span class="flex-1"><strong class="text-graphite dark:text-ivory font-medium">startups post-Seed / Series A</strong></span>
						</li>
						<li class="flex items-start gap-4">
							<span class="text-sand dark:text-sand-light font-serif text-lg md:text-xl mt-0.5 flex-shrink-0 w-4 text-right font-medium">—</span>
							<span class="flex-1"><strong class="text-graphite dark:text-ivory font-medium">équipes produit 2 à 10 personnes</strong></span>
						</li>
						<li class="flex items-start gap-4">
							<span class="text-sand dark:text-sand-light font-serif text-lg md:text-xl mt-0.5 flex-shrink-0 w-4 text-right font-medium">—</span>
							<span class="flex-1"><strong class="text-graphite dark:text-ivory font-medium">CEO qui veulent un copilote stratégique</strong></span>
						</li>
						<li class="flex items-start gap-4">
							<span class="text-sand dark:text-sand-light font-serif text-lg md:text-xl mt-0.5 flex-shrink-0 w-4 text-right font-medium">—</span>
							<span class="flex-1"><strong class="text-graphite dark:text-ivory font-medium">entreprises qui grandissent plus vite que leur système produit</strong></span>
						</li>
					</ul>
				</div>
			</div>
		</section>

		<!-- SECTION 5 — Méthode -->
		<section class="py-24 md:py-32 px-6 md:px-12 bg-ivory dark:bg-graphite relative z-10" aria-labelledby="methode-heading">
			<div class="max-w-4xl mx-auto">
				<h2 id="methode-heading" class="font-serif text-3xl md:text-4xl mb-12 fade-in-up text-graphite dark:text-ivory">
					Méthode
				</h2>
				<div class="space-y-8 fade-in-up" style="transition-delay: 0.1s;">
					<div class="border-l-2 border-sand/30 dark:border-sand/20 pl-6 md:pl-8 space-y-2">
						<h3 class="font-serif text-xl md:text-2xl text-graphite dark:text-ivory font-medium">Diagnostic stratégique</h3>
					</div>
					<div class="border-l-2 border-sand/30 dark:border-sand/20 pl-6 md:pl-8 space-y-2">
						<h3 class="font-serif text-xl md:text-2xl text-graphite dark:text-ivory font-medium">Vision clarifiée</h3>
					</div>
					<div class="border-l-2 border-sand/30 dark:border-sand/20 pl-6 md:pl-8 space-y-2">
						<h3 class="font-serif text-xl md:text-2xl text-graphite dark:text-ivory font-medium">Cadre de décision</h3>
					</div>
					<div class="border-l-2 border-sand/30 dark:border-sand/20 pl-6 md:pl-8 space-y-2">
						<h3 class="font-serif text-xl md:text-2xl text-graphite dark:text-ivory font-medium">Focus (stop, start, scale)</h3>
					</div>
					<div class="border-l-2 border-sand/30 dark:border-sand/20 pl-6 md:pl-8 space-y-2">
						<h3 class="font-serif text-xl md:text-2xl text-graphite dark:text-ivory font-medium">Exécution assistée</h3>
					</div>
					<div class="border-l-2 border-sand/30 dark:border-sand/20 pl-6 md:pl-8 space-y-2">
						<h3 class="font-serif text-xl md:text-2xl text-graphite dark:text-ivory font-medium">Transmission</h3>
					</div>
				</div>
			</div>
		</section>

		<!-- SECTION 6 — CTA final -->
		<section class="py-32 px-6 md:px-12 flex flex-col justify-center items-center text-center relative z-0 bg-ivory dark:bg-graphite-light fade-in-up" aria-labelledby="cta-heading">
			<div class="absolute inset-0 bg-sand/5 pointer-events-none"></div>
			<div class="max-w-3xl space-y-10 relative z-10">
				<h2 id="cta-heading" class="font-serif text-3xl md:text-5xl leading-tight text-graphite dark:text-ivory">
					Votre produit manque peut-être de fonctionnalités.
				</h2>
				<p class="text-xl md:text-2xl text-graphite dark:text-warmgray-300">Mais il manque surtout de clarté.</p>
				<div>
					<a href="https://app.lemcal.com/@productcopilot/decouverte" 
					   data-lemcal-popup
					   class="inline-block bg-graphite dark:bg-ivory text-ivory dark:text-graphite font-sans px-10 py-5 text-sm font-medium tracking-wide btn-premium"
					   aria-label="Discuter de votre situation produit">
						Réservons un échange
					</a>
				</div>
			</div>
		</section>

	</main>
	<Footer />
</Layout>

<script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
<script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />

