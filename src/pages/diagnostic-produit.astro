---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { getDiagnosticProduitSchema, getPageBreadcrumbSchema } from '../utils/schemas';

const title = "Diagnostic Produit — Comprendre ce qui freine l'adoption, la traction et l'usage | Julien Brionne";
const description = "En 2 à 3 semaines, je fais apparaître ce que tout le monde ressent… mais que personne n'exprime clairement.";

const siteUrl = typeof Astro.site === 'string' ? Astro.site : Astro.site?.href || "https://julien-brionne.fr";
const pageUrl = `${siteUrl}/diagnostic-produit`;

const serviceSchema = getDiagnosticProduitSchema({
	siteUrl,
	pageUrl,
	name: "Diagnostic Produit — Analyse Complète",
	description: "En 2 à 3 semaines, je fais apparaître ce que tout le monde ressent… mais que personne n'exprime clairement. Analyse vision, usage, arbitrages, équipe et signaux faibles.",
	serviceType: [
		"Diagnostic Produit",
		"Analyse Vision et Stratégie",
		"Analyse Usage et Adoption",
		"Analyse Équipe et Processus",
		"Audit Produit"
	],
	areaServed: {
		"@type": "Country",
		"name": "France"
	}
});

const breadcrumbSchema = getPageBreadcrumbSchema(siteUrl, pageUrl, "Diagnostic Produit");
---

<Layout title={title} description={description}>
	<Navbar />
	<main>
		
		<!-- SECTION 1 — HERO -->
		<section class="min-h-[90vh] flex items-center pt-32 pb-20 relative bg-ivory dark:bg-graphite overflow-hidden" aria-label="Hero - Diagnostic Produit">
			<div class="absolute inset-0 bg-split-overlay pointer-events-none"></div>
			
			<!-- SVG d'arrière-plan -->
			<div class="absolute inset-0 z-0 pointer-events-none flex items-center justify-center overflow-hidden">
				<svg width="100%" height="100%" viewBox="0 0 1440 800" preserveAspectRatio="xMidYMid slice" fill="none" xmlns="http://www.w3.org/2000/svg" class="opacity-60 dark:opacity-30">
					<path d="M-100 600 C 200 600, 400 300, 800 400 C 1200 500, 1400 200, 1600 200" stroke="#C6A676" stroke-width="1.5" fill="none" />
					<path d="M-100 620 C 200 620, 400 320, 800 420 C 1200 520, 1400 220, 1600 220" stroke="#C6A676" stroke-width="1" fill="none" opacity="0.7" />
					<circle cx="1100" cy="300" r="15" fill="#C6A676" />
				</svg>
			</div>
			
			<div class="max-w-[1400px] mx-auto px-6 md:px-12 w-full grid grid-cols-1 lg:grid-cols-12 gap-12 items-center h-full relative z-10">
				<div class="lg:col-span-8 space-y-8 fade-in-up text-left" style="transition-delay: 0.1s;">
					<h1 class="font-serif text-4xl md:text-5xl lg:text-6xl leading-[1.05] text-balance font-medium text-graphite dark:text-ivory">
						Diagnostic Produit — Comprendre ce qui freine l'adoption, la traction et l'usage
					</h1>
					<p class="font-sans text-lg md:text-xl text-graphite dark:text-warmgray-300 max-w-2xl leading-relaxed pt-2">
						En 2 à 3 semaines, je fais apparaître ce que tout le monde ressent… mais que personne n'exprime clairement.
					</p>
					<div class="pt-8 flex flex-wrap gap-4">
						<a href="https://app.lemcal.com/@productcopilot/decouverte" 
						   data-lemcal-popup
						   class="inline-block bg-graphite dark:bg-ivory text-ivory dark:text-graphite font-sans px-9 py-4 text-sm font-medium tracking-wide btn-premium"
						   aria-label="Commencer le diagnostic produit">
							Commencer le diagnostic
						</a>
					</div>
				</div>
			</div>
		</section>

		<!-- SECTION 2 — Pourquoi un diagnostic ? -->
		<section class="py-24 md:py-32 px-6 md:px-12 bg-ivory dark:bg-graphite-light relative z-10" aria-labelledby="pourquoi-heading">
			<div class="absolute inset-0 bg-sand/5 pointer-events-none"></div>
			<div class="max-w-4xl mx-auto relative z-10">
				<h2 id="pourquoi-heading" class="font-serif text-3xl md:text-4xl mb-8 fade-in-up text-graphite dark:text-ivory">
					Pourquoi un diagnostic ?
				</h2>
				<div class="space-y-6 text-base md:text-lg leading-relaxed text-graphite dark:text-warmgray-300 fade-in-up" style="transition-delay: 0.1s;">
					<p class="font-medium text-graphite dark:text-ivory">Quand un produit n'avance plus, ce n'est jamais "un problème".</p>
					<p class="font-medium text-graphite dark:text-ivory">C'est un système entier qui se dérègle :</p>
					<ul class="space-y-4 ml-4">
						<li class="flex items-start gap-4">
							<span class="text-sand dark:text-sand-light font-serif text-lg md:text-xl mt-0.5 flex-shrink-0 w-4 text-right font-medium">—</span>
							<span class="flex-1">vision floue</span>
						</li>
						<li class="flex items-start gap-4">
							<span class="text-sand dark:text-sand-light font-serif text-lg md:text-xl mt-0.5 flex-shrink-0 w-4 text-right font-medium">—</span>
							<span class="flex-1">priorités instables</span>
						</li>
						<li class="flex items-start gap-4">
							<span class="text-sand dark:text-sand-light font-serif text-lg md:text-xl mt-0.5 flex-shrink-0 w-4 text-right font-medium">—</span>
							<span class="flex-1">arbitrages dispersés</span>
						</li>
						<li class="flex items-start gap-4">
							<span class="text-sand dark:text-sand-light font-serif text-lg md:text-xl mt-0.5 flex-shrink-0 w-4 text-right font-medium">—</span>
							<span class="flex-1">onboarding fragile</span>
						</li>
						<li class="flex items-start gap-4">
							<span class="text-sand dark:text-sand-light font-serif text-lg md:text-xl mt-0.5 flex-shrink-0 w-4 text-right font-medium">—</span>
							<span class="flex-1">mauvaise circulation de l'information</span>
						</li>
						<li class="flex items-start gap-4">
							<span class="text-sand dark:text-sand-light font-serif text-lg md:text-xl mt-0.5 flex-shrink-0 w-4 text-right font-medium">—</span>
							<span class="flex-1">PMs en surcharge</span>
						</li>
						<li class="flex items-start gap-4">
							<span class="text-sand dark:text-sand-light font-serif text-lg md:text-xl mt-0.5 flex-shrink-0 w-4 text-right font-medium">—</span>
							<span class="flex-1">usage qui décroche</span>
						</li>
						<li class="flex items-start gap-4">
							<span class="text-sand dark:text-sand-light font-serif text-lg md:text-xl mt-0.5 flex-shrink-0 w-4 text-right font-medium">—</span>
							<span class="flex-1">features qui n'apportent plus d'impact</span>
						</li>
					</ul>
					<p class="pt-4 italic text-graphite dark:text-warmgray-300">
						Un diagnostic, c'est la carte complète de ce qui s'est passé.
					</p>
				</div>
			</div>
		</section>

		<!-- SECTION 3 — Ce que j'analyse -->
		<section class="py-24 md:py-32 px-6 md:px-12 bg-ivory dark:bg-graphite relative z-10" aria-labelledby="analyse-heading">
			<div class="max-w-4xl mx-auto">
				<h2 id="analyse-heading" class="font-serif text-3xl md:text-4xl mb-12 fade-in-up text-graphite dark:text-ivory">
					Ce que j'analyse
				</h2>
				<div class="space-y-6 text-base md:text-lg leading-relaxed text-graphite dark:text-warmgray-300 fade-in-up" style="transition-delay: 0.1s;">
					<ul class="space-y-4 ml-4">
						<li class="flex items-start gap-4">
							<span class="text-sand dark:text-sand-light font-serif text-lg md:text-xl mt-0.5 flex-shrink-0 w-4 text-right font-medium">—</span>
							<span class="flex-1">vision, mission, direction</span>
						</li>
						<li class="flex items-start gap-4">
							<span class="text-sand dark:text-sand-light font-serif text-lg md:text-xl mt-0.5 flex-shrink-0 w-4 text-right font-medium">—</span>
							<span class="flex-1">arbitrages réels (pas ceux des slides)</span>
						</li>
						<li class="flex items-start gap-4">
							<span class="text-sand dark:text-sand-light font-serif text-lg md:text-xl mt-0.5 flex-shrink-0 w-4 text-right font-medium">—</span>
							<span class="flex-1">usage, activation, adoption</span>
						</li>
						<li class="flex items-start gap-4">
							<span class="text-sand dark:text-sand-light font-serif text-lg md:text-xl mt-0.5 flex-shrink-0 w-4 text-right font-medium">—</span>
							<span class="flex-1">rituels, rythme et décisions</span>
						</li>
						<li class="flex items-start gap-4">
							<span class="text-sand dark:text-sand-light font-serif text-lg md:text-xl mt-0.5 flex-shrink-0 w-4 text-right font-medium">—</span>
							<span class="flex-1">structure de l'équipe produit</span>
						</li>
						<li class="flex items-start gap-4">
							<span class="text-sand dark:text-sand-light font-serif text-lg md:text-xl mt-0.5 flex-shrink-0 w-4 text-right font-medium">—</span>
							<span class="flex-1">signaux faibles</span>
						</li>
						<li class="flex items-start gap-4">
							<span class="text-sand dark:text-sand-light font-serif text-lg md:text-xl mt-0.5 flex-shrink-0 w-4 text-right font-medium">—</span>
							<span class="flex-1">tensions invisibles</span>
						</li>
					</ul>
				</div>
			</div>
		</section>

		<!-- SECTION 4 — Ce que vous recevez -->
		<section class="py-24 md:py-32 px-6 md:px-12 bg-ivory dark:bg-graphite-light relative z-10" aria-labelledby="recevez-heading">
			<div class="absolute inset-0 bg-sand/5 pointer-events-none"></div>
			<div class="max-w-4xl mx-auto relative z-10">
				<h2 id="recevez-heading" class="font-serif text-3xl md:text-4xl mb-12 fade-in-up text-graphite dark:text-ivory">
					Ce que vous recevez
				</h2>
				<div class="space-y-8 fade-in-up" style="transition-delay: 0.1s;">
					<div class="border-l-2 border-sand/30 dark:border-sand/20 pl-6 md:pl-8 space-y-2">
						<h3 class="font-serif text-xl md:text-2xl text-graphite dark:text-ivory font-medium">un rapport clair (pas 50 pages inutiles)</h3>
					</div>
					<div class="border-l-2 border-sand/30 dark:border-sand/20 pl-6 md:pl-8 space-y-2">
						<h3 class="font-serif text-xl md:text-2xl text-graphite dark:text-ivory font-medium">les leviers d'impact immédiats</h3>
					</div>
					<div class="border-l-2 border-sand/30 dark:border-sand/20 pl-6 md:pl-8 space-y-2">
						<h3 class="font-serif text-xl md:text-2xl text-graphite dark:text-ivory font-medium">les décisions à prendre</h3>
					</div>
					<div class="border-l-2 border-sand/30 dark:border-sand/20 pl-6 md:pl-8 space-y-2">
						<h3 class="font-serif text-xl md:text-2xl text-graphite dark:text-ivory font-medium">un plan pour remettre le produit dans le bon sens</h3>
					</div>
					<div class="border-l-2 border-sand/30 dark:border-sand/20 pl-6 md:pl-8 space-y-2">
						<h3 class="font-serif text-xl md:text-2xl text-graphite dark:text-ivory font-medium">une roadmap qui aligne tout le monde</h3>
					</div>
					<div class="border-l-2 border-sand/30 dark:border-sand/20 pl-6 md:pl-8 space-y-2">
						<h3 class="font-serif text-xl md:text-2xl text-graphite dark:text-ivory font-medium">la compréhension de ce qui a réellement déraillé</h3>
					</div>
				</div>
			</div>
		</section>

		<!-- SECTION 5 — À qui ça s'adresse ? -->
		<section class="py-24 md:py-32 px-6 md:px-12 bg-ivory dark:bg-graphite relative z-10" aria-labelledby="adresse-heading">
			<div class="max-w-4xl mx-auto">
				<h2 id="adresse-heading" class="font-serif text-3xl md:text-4xl mb-12 fade-in-up text-graphite dark:text-ivory">
					À qui ça s'adresse ?
				</h2>
				<div class="space-y-6 text-base md:text-lg leading-relaxed text-graphite dark:text-warmgray-300 fade-in-up" style="transition-delay: 0.1s;">
					<ul class="space-y-4 ml-4">
						<li class="flex items-start gap-4">
							<span class="text-sand dark:text-sand-light font-serif text-lg md:text-xl mt-0.5 flex-shrink-0 w-4 text-right font-medium">—</span>
							<span class="flex-1">CEO en perte de visibilité</span>
						</li>
						<li class="flex items-start gap-4">
							<span class="text-sand dark:text-sand-light font-serif text-lg md:text-xl mt-0.5 flex-shrink-0 w-4 text-right font-medium">—</span>
							<span class="flex-1">équipe produit en surcharge</span>
						</li>
						<li class="flex items-start gap-4">
							<span class="text-sand dark:text-sand-light font-serif text-lg md:text-xl mt-0.5 flex-shrink-0 w-4 text-right font-medium">—</span>
							<span class="flex-1">usage qui stagne</span>
						</li>
						<li class="flex items-start gap-4">
							<span class="text-sand dark:text-sand-light font-serif text-lg md:text-xl mt-0.5 flex-shrink-0 w-4 text-right font-medium">—</span>
							<span class="flex-1">croissance qui ralentit</span>
						</li>
						<li class="flex items-start gap-4">
							<span class="text-sand dark:text-sand-light font-serif text-lg md:text-xl mt-0.5 flex-shrink-0 w-4 text-right font-medium">—</span>
							<span class="flex-1">scaling qui crée du chaos</span>
						</li>
					</ul>
				</div>
			</div>
		</section>

		<!-- SECTION 6 — CTA final -->
		<section class="py-32 px-6 md:px-12 flex flex-col justify-center items-center text-center relative z-0 bg-ivory dark:bg-graphite-light fade-in-up" aria-labelledby="cta-heading">
			<div class="absolute inset-0 bg-sand/5 pointer-events-none"></div>
			<div class="max-w-3xl space-y-10 relative z-10">
				<h2 id="cta-heading" class="font-serif text-3xl md:text-5xl leading-tight text-graphite dark:text-ivory">
					Vous avez besoin de clarté.
				</h2>
				<p class="text-xl md:text-2xl text-graphite dark:text-warmgray-300">On la construit ensemble.</p>
				<div>
					<a href="https://app.lemcal.com/@productcopilot/decouverte" 
					   data-lemcal-popup
					   class="inline-block bg-graphite dark:bg-ivory text-ivory dark:text-graphite font-sans px-10 py-5 text-sm font-medium tracking-wide btn-premium"
					   aria-label="Commencer le diagnostic produit">
						Commencer le diagnostic
					</a>
				</div>
			</div>
		</section>

	</main>
	<Footer />
</Layout>

<script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
<script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />

