---
interface Props {
	children: any;
}

const { children } = Astro.props;
---

<aside class="side-note-magazine fade-in-up">
	<div class="side-note-content-magazine border-l-2 border-sand/40 dark:border-sand/30 bg-[#F9F6F1] dark:bg-[#1E1E1E] text-[#121212] dark:text-[#C9B8A5] px-6 py-6 rounded-r-lg font-sans text-sm md:text-xs leading-relaxed">
		<slot />
	</div>
</aside>

<style>
	/* Desktop : flotte sur la droite dans la marge */
	.side-note-magazine {
		position: absolute;
		right: -280px;
		width: 260px;
		margin-top: 0.5rem;
		margin-bottom: 2rem;
	}
	
	@media (max-width: 1279px) {
		.side-note-magazine {
			position: relative;
			right: auto;
			width: 100%;
			margin-top: 2rem;
			margin-bottom: 2rem;
			margin-left: 0;
		}
	}
	
	.side-note-content-magazine {
		/* Styles de base gérés par Tailwind maintenant */
	}
</style>
