---
interface Props {
	children: any;
}

const { children } = Astro.props;
---

<aside class="side-note-magazine fade-in-up">
	<div class="side-note-content-magazine">
		<slot />
	</div>
</aside>

<style>
	/* Desktop : flotte sur la droite dans la marge */
	.side-note-magazine {
		position: absolute;
		right: -280px;
		width: 260px;
		margin-top: 0.5rem;
		margin-bottom: 2rem;
	}
	
	@media (max-width: 1279px) {
		.side-note-magazine {
			position: relative;
			right: auto;
			width: 100%;
			margin-top: 2rem;
			margin-bottom: 2rem;
			margin-left: 0;
		}
	}
	
	.side-note-content-magazine {
		border-left: 2px solid rgba(198, 166, 118, 0.4);
		background-color: #F9F6F1;
		padding: 1.5rem;
		border-radius: 0 0.5rem 0.5rem 0;
		font-family: 'Inter', sans-serif;
		font-size: 0.875rem;
		line-height: 1.6;
		color: #121212;
	}
	
	.dark .side-note-content-magazine {
		border-left-color: rgba(198, 166, 118, 0.3);
		background-color: #1E1E1E;
		color: #C9B8A5;
	}
	
	@media (min-width: 1280px) {
		.side-note-content-magazine {
			font-size: 0.8125rem;
		}
	}
</style>
