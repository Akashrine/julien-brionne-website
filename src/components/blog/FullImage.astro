---
interface Props {
	src: string;
	alt: string;
	caption?: string;
}

const { src, alt, caption } = Astro.props;
---

<figure class="my-12 md:my-16 -mx-6 md:-mx-12 lg:-mx-24 fade-in-up">
	<div class="w-full md:w-screen md:relative md:left-1/2 md:right-1/2 md:-ml-[50vw] md:-mr-[50vw]">
		<img 
			src={src} 
			alt={alt}
			class="w-full h-auto object-cover"
			loading="lazy"
		/>
	{caption && (
			<figcaption class="mt-4 px-6 md:px-12 text-center font-sans text-xs italic text-graphite/50 dark:text-ivory/50">
			{caption}
		</figcaption>
	)}
	</div>
</figure>
