---
interface Props {
	title?: string;
}

const { title } = Astro.props;
---

<section class="my-16 py-12 border-t border-b border-sand/20 dark:border-sand/15 fade-in-up">
		<div class="max-w-3xl mx-auto text-center">
		{title && (
			<h3 class="font-serif text-xl md:text-2xl mb-6 text-graphite dark:text-ivory">
				{title}
			</h3>
		)}
		<div class="font-sans text-lg md:text-xl leading-relaxed text-graphite dark:text-warmgray-300 prose prose-lg dark:prose-invert max-w-none">
				<slot />
			</div>
		</div>
</section>

