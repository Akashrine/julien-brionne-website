---
interface Props {
	children: any;
}

const { children } = Astro.props;
---

<div class="my-8 md:my-12 bg-[#1E1E1E] dark:bg-[#0D0D0D] border border-graphite/20 dark:border-sand/10 rounded-lg overflow-hidden shadow-lg relative">
	<!-- Barre macOS avec 3 points -->
	<div class="px-4 py-3 flex items-center gap-2 border-b border-graphite/20 dark:border-sand/10">
		<div class="flex gap-2">
			<div class="w-3 h-3 rounded-full bg-[#FF5F57]"></div>
			<div class="w-3 h-3 rounded-full bg-[#FFBD2E]"></div>
			<div class="w-3 h-3 rounded-full bg-[#28CA42]"></div>
		</div>
	</div>
	<!-- Contenu -->
	<div class="p-6 prose prose-sm dark:prose-invert max-w-none">
		<div class="text-ivory/90 dark:text-warmgray-300 font-mono text-sm leading-relaxed">
	<slot />
		</div>
	</div>
</div>
