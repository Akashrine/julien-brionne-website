---
interface Props {
	text?: string;
	author?: string;
	children?: any;
}

const { text, author } = Astro.props;
---

<blockquote class="my-12 -mx-6 md:-mx-12 text-center fade-in-up">
	<div class="max-w-4xl mx-auto px-6 md:px-12">
		<p class="font-serif text-3xl md:text-4xl lg:text-5xl italic leading-relaxed text-graphite dark:text-ivory mb-6 relative">
			<span class="absolute -left-8 md:-left-16 top-0 text-7xl md:text-8xl text-sand/20 dark:text-sand/10 font-serif leading-none pointer-events-none">"</span>
			<span class="relative z-10">
				{text || <slot />}
			</span>
			<span class="absolute -right-8 md:-right-16 bottom-0 text-7xl md:text-8xl text-sand/20 dark:text-sand/10 font-serif leading-none pointer-events-none">"</span>
	</p>
	{author && (
			<cite class="font-sans text-sm uppercase tracking-wider text-graphite/60 dark:text-ivory/60 not-italic">
			â€” {author}
		</cite>
	)}
	</div>
</blockquote>
