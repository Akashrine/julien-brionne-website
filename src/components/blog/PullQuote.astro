---
interface Props {
	author?: string;
	children: any;
}

const { author } = Astro.props;
---

<blockquote class="my-20 md:my-24 text-center fade-in-up">
	<div class="max-w-4xl mx-auto">
		<p class="font-serif text-3xl md:text-4xl lg:text-5xl italic leading-[1.2] text-graphite dark:text-ivory mb-6 relative">
			<span class="absolute -left-8 md:-left-12 top-0 text-6xl md:text-7xl text-sand/30 dark:text-sand/20 font-serif leading-none">"</span>
			<span class="relative z-10">
				<slot />
			</span>
			<span class="absolute -right-8 md:-right-12 bottom-0 text-6xl md:text-7xl text-sand/30 dark:text-sand/20 font-serif leading-none">"</span>
		</p>
		{author && (
			<cite class="font-sans text-sm uppercase tracking-wider text-graphite/60 dark:text-ivory/60 not-italic">
				â€” {author}
			</cite>
		)}
	</div>
</blockquote>

