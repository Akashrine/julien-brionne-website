<header>
	<nav class="fixed w-full top-0 z-50 transition-all duration-500" id="navbar" role="navigation" aria-label="Navigation principale">
		<div id="navbar-inner" class="max-w-[1400px] mx-auto px-6 md:px-12 py-6 flex justify-between items-center transition-all duration-500">
			<a href="/" class="font-sans text-lg md:text-xl tracking-tight flex items-center gap-0.5 group text-graphite dark:text-ivory relative" id="logo-link" aria-label="Julien Brionne - Accueil">
				<!-- Logo (visible au scroll) -->
				<img src="/favicons/favicon-light.webp" 
					 alt="Logo Julien Brionne - Product Copilot" 
					 class="h-8 w-8 opacity-0 scale-0 transition-all duration-300 dark:hidden absolute"
					 id="logo-light"
					 loading="eager"
					 width="32"
					 height="32">
				<img src="/favicons/favicon-dark.webp" 
					 alt="Logo Julien Brionne - Product Copilot" 
					 class="h-8 w-8 opacity-0 scale-0 transition-all duration-300 hidden dark:block absolute"
					 id="logo-dark"
					 loading="eager"
					 width="32"
					 height="32">
				<!-- Texte (visible par défaut) -->
				<span class="flex items-baseline gap-0.5 transition-all duration-300" id="logo-text">
					<span class="font-medium">Julien</span>
					<span class="font-black">Brionne</span>
					<span class="text-sand text-3xl leading-none transition-transform duration-300 group-hover:scale-110 origin-bottom" aria-hidden="true">.</span>
				</span>
			</a>
			
			<!-- Menu desktop -->
			<div class="hidden md:flex items-center gap-6">
				<a href="/" class="text-sm font-medium hover-underline tracking-wide text-graphite dark:text-ivory" aria-label="Retour à l'accueil">Home</a>
				<a href="/approche" class="text-sm font-medium hover-underline tracking-wide text-graphite dark:text-ivory" aria-label="Découvrir mon approche">Approche</a>
				<a href="/case-studies" class="text-sm font-medium hover-underline tracking-wide text-graphite dark:text-ivory" aria-label="Découvrir mes études de cas">Études de cas</a>
				<a href="/blog" class="text-sm font-medium hover-underline tracking-wide text-graphite dark:text-ivory" aria-label="Lire mes articles">Articles</a>
				<a href="https://app.lemcal.com/@productcopilot/decouverte" 
				   data-lemcal-popup
				   class="inline-block bg-graphite dark:bg-ivory text-ivory dark:text-graphite font-sans px-6 py-2.5 text-sm font-medium tracking-wide transition-all duration-300 hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-sand focus:ring-offset-2 rounded" 
				   aria-label="Discuter de votre situation produit">Discuter</a>
				<button id="theme-toggle" class="text-graphite dark:text-ivory hover:text-sand transition-colors focus:outline-none focus:ring-2 focus:ring-sand focus:ring-offset-2 rounded" aria-label="Basculer entre le thème clair et sombre" type="button">
					<svg id="theme-toggle-light-icon" class="hidden w-5 h-5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
						<path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 100 2h1z" fill-rule="evenodd" clip-rule="evenodd"></path>
					</svg>
					<svg id="theme-toggle-dark-icon" class="hidden w-5 h-5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
						<path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
					</svg>
				</button>
			</div>
			
			<!-- Bouton hamburger mobile -->
			<div class="md:hidden flex items-center gap-4">
				<button id="theme-toggle-mobile" class="text-graphite dark:text-ivory hover:text-sand transition-colors focus:outline-none focus:ring-2 focus:ring-sand focus:ring-offset-2 rounded" aria-label="Basculer entre le thème clair et sombre" type="button">
					<svg id="theme-toggle-light-icon-mobile" class="hidden w-5 h-5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
						<path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 100 2h1z" fill-rule="evenodd" clip-rule="evenodd"></path>
					</svg>
					<svg id="theme-toggle-dark-icon-mobile" class="hidden w-5 h-5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
						<path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
					</svg>
				</button>
				<button 
					id="mobile-menu-toggle" 
					class="text-graphite dark:text-ivory hover:text-sand transition-colors focus:outline-none focus:ring-2 focus:ring-sand focus:ring-offset-2 rounded p-2" 
					aria-label="Ouvrir le menu de navigation" 
					aria-expanded="false"
					type="button"
				>
					<!-- Icône hamburger -->
					<svg id="hamburger-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
					</svg>
					<!-- Icône fermer -->
					<svg id="close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
					</svg>
				</button>
			</div>
		</div>
		
		<!-- Menu mobile -->
		<div id="mobile-menu" class="md:hidden hidden fixed inset-x-0 top-[73px] bg-ivory/98 dark:bg-graphite/98 backdrop-blur-sm border-t border-sand/10 shadow-lg">
			<div class="px-6 py-6 space-y-4">
				<a href="/" class="block text-base font-medium text-graphite dark:text-ivory hover:text-sand transition-colors py-2" aria-label="Retour à l'accueil">Home</a>
				<a href="/approche" class="block text-base font-medium text-graphite dark:text-ivory hover:text-sand transition-colors py-2" aria-label="Découvrir mon approche">Approche</a>
				<a href="/case-studies" class="block text-base font-medium text-graphite dark:text-ivory hover:text-sand transition-colors py-2" aria-label="Découvrir mes études de cas">Études de cas</a>
				<a href="/blog" class="block text-base font-medium text-graphite dark:text-ivory hover:text-sand transition-colors py-2" aria-label="Lire mes articles">Articles</a>
				<a href="https://app.lemcal.com/@productcopilot/decouverte" 
				   data-lemcal-popup
				   class="block w-full text-center bg-graphite dark:bg-ivory text-ivory dark:text-graphite font-sans px-6 py-3 text-sm font-medium tracking-wide transition-all duration-300 hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-sand focus:ring-offset-2 rounded mt-4" 
				   aria-label="Discuter de votre situation produit">Discuter</a>
			</div>
		</div>
	</nav>
</header>

<script>
	// Gestion du menu mobile
	document.addEventListener('DOMContentLoaded', () => {
		const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
		const mobileMenu = document.getElementById('mobile-menu');
		const hamburgerIcon = document.getElementById('hamburger-icon');
		const closeIcon = document.getElementById('close-icon');
		
		if (mobileMenuToggle && mobileMenu) {
			mobileMenuToggle.addEventListener('click', () => {
				const isOpen = !mobileMenu.classList.contains('hidden');
				
				if (isOpen) {
					// Fermer le menu
					mobileMenu.classList.add('hidden');
					hamburgerIcon?.classList.remove('hidden');
					closeIcon?.classList.add('hidden');
					mobileMenuToggle.setAttribute('aria-expanded', 'false');
				} else {
					// Ouvrir le menu
					mobileMenu.classList.remove('hidden');
					hamburgerIcon?.classList.add('hidden');
					closeIcon?.classList.remove('hidden');
					mobileMenuToggle.setAttribute('aria-expanded', 'true');
				}
			});
			
			// Fermer le menu quand on clique sur un lien
			const mobileLinks = mobileMenu.querySelectorAll('a');
			mobileLinks.forEach(link => {
				link.addEventListener('click', () => {
					mobileMenu.classList.add('hidden');
					hamburgerIcon?.classList.remove('hidden');
					closeIcon?.classList.add('hidden');
					mobileMenuToggle.setAttribute('aria-expanded', 'false');
				});
			});
			
			// Fermer le menu quand on clique en dehors
			document.addEventListener('click', (e) => {
				if (!mobileMenuToggle.contains(e.target) && !mobileMenu.contains(e.target)) {
					mobileMenu.classList.add('hidden');
					hamburgerIcon?.classList.remove('hidden');
					closeIcon?.classList.add('hidden');
					mobileMenuToggle.setAttribute('aria-expanded', 'false');
				}
			});
		}
		
		// Gestion du theme toggle mobile
		const themeToggleMobile = document.getElementById('theme-toggle-mobile');
		const themeToggle = document.getElementById('theme-toggle');
		
		if (themeToggleMobile && themeToggle) {
			themeToggleMobile.addEventListener('click', () => {
				themeToggle.click();
			});
		}
	});
</script>

